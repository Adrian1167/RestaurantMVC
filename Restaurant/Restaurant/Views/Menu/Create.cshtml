@model Menu

<form method="post">
    <div class="vorder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Menu</h2>
            <hr/>
        </div>
         <div class="mb-3">
            <label asp-for="Speciality"></label>
            <input asp-for="Speciality" class="form-control" />
            <span asp-validation-for="Speciality" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="FoodItems"></label>
            <input asp-for="FoodItems" class="form-control" />
            <span asp-validation-for="FoodItems" class="text-danger" ></span>
        </div>
      
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Menu" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>
